<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'login100-form validate-form flex-sb flex-w'}) do |f| %>
      <span class="login100-form-title p-b-32">
        Account Login
      </span>
      <span class="txt1 p-b-11">
        <%= f.label :email %>
      </span>
      <div class="wrap-input100 validate-input">
        <%= f.email_field :email, class: 'input100', autofocus: true, autocomplete: "email" %>
        <span class="focus-input100"></span>
      </div>
      <span class="txt1 p-b-11">
        <%= f.label :password %>
      </span>
      <div class="wrap-input100 validate-input m-b-12">
        <span class="btn-show-pass">
          <i class="fa fa-eye"></i>
        </span>
        <%= f.password_field :password, class: 'input100', autocomplete: "current-password" %>
      </div>
      <div class="flex-sb-m w-full p-b-48">
        <% if devise_mapping.rememberable? %>
          <div class="contact100-form-checkbox">
            <%= f.check_box :remember_me, class: 'input-checkbox100', id: 'ckb1' %>
            <label class="label-checkbox100" for="ckb1">
              <%= f.label :remember_me %>
            </label>
          </div>
        <% end %>

      </div>

      <div class="actions">
        <%= f.submit "Log in", class: 'login100-form-btn' %>
      </div>
    <% end %>
    <div>
      <%= render "companies/shared/links" %>
    </div>
  </div>
</div>
</div>
